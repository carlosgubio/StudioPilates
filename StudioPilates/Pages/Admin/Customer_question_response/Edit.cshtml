@page
@model StudioPilates.Pages.Customer_question_response.EditModel

@{
    ViewData["Title"] = "Atualizar Respostas";
}

<h1>@ViewData["Title"]</h1>

<h4><b>Nome:</b>@Model.Customer_question_response.Id_customer</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer_question_response.Id_customer_question_response" />
            <div class="form-group">
                <label asp-for="Customer_question_response.Id_customer" class="control-label"></label>
                <input asp-for="Customer_question_response.Id_customer" class="form-control" />
                <span asp-validation-for="Customer_question_response.Id_customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_question_response.Id_question" class="control-label"></label>
                <input asp-for="Customer_question_response.Id_question" class="form-control" />
                <span asp-validation-for="Customer_question_response.Id_question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_question_response.Response" class="control-label"></label>
                <input asp-for="Customer_question_response.Response" class="form-control" />
                <span asp-validation-for="Customer_question_response.Response" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar à Listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

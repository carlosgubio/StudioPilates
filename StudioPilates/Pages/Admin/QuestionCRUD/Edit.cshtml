@page
@model StudioPilates.Pages.QuestionCRUD.EditModel

@{
    ViewData["Title"] = "Editar Pergunta";
}
<main class="container mt-3">
    <div class="row justify-content-md-center">
        <div class="col-sm-12">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <hr class="mt-1" />
            <form method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Question.Id_question" />
                <div class="form-group">
                    <label asp-for="Question.Text" class="control-label "></label>
                    <input asp-for="Question.Text" class="form-control col-8" />
                    <span asp-validation-for="Question.Text" class="text-danger"></span>
                </div>
                <div class="form-group text-left">
                    <a asp-page="/Admin/QuestionCRUD/List" class="btn btn-danger">Cancelar</a>
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

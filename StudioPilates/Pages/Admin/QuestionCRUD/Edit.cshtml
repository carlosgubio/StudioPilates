@page
@model StudioPilates.Pages.QuestionCRUD.EditModel

@{
    ViewData["Title"] = "Atualizar Pergunta";
}
<main class="container mt-3">>
    <div class="row justify-content-md-center">
        <div class="col-sm-12">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <form method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Question.Id_question" />
                <div class="form-group">
                    <label asp-for="Question.Text" class="control-label"></label>
                    <input asp-for="Question.Text" class="form-control" />
                    <span asp-validation-for="Question.Text" class="text-danger"></span>
                </div>
                <div class="form-group text-left">
                    <a asp-page="/QuestionCRUD/List" class="btn btn-info">Cancelar</a>
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model StudioPilates.Pages.PlanCRUD.EditModel

@{
    ViewData["Title"] = "Atualizar Plano";
}

<main class="container mt-3">
    <div class="row justify-content-md-center">
        <div class="col-sm-12">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <form method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Plan.Name" class="control-label"></label>
                    <input asp-for="Plan.Name" class="form-control col-4" />
                    <span asp-validation-for="Plan.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Plan.Price" class="control-label"></label>
                    <input asp-for="Plan.Price" class="form-control col-2" />
                    <span asp-validation-for="Plan.Price" class="text-danger"></span>
                </div>
                <div class="inputState">
                    <label asp-for="Plan.Payment_recurrence" class="control-label"></label>
                    <input asp-for="Plan.Payment_recurrence" class="form-control col-2" />
                    <span asp-validation-for="Plan.Payment_recurrence" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Plan.Contract_recurrence" class="control-label"></label>
                    <input asp-for="Plan.Contract_recurrence" class="form-control col-2" />
                    <span asp-validation-for="Plan.Contract_recurrence" class="text-danger"></span>
                </div>
                <div class="form-group text-left">
                    <a asp-page="/Admin/PlanCRUD/List" class="btn btn-danger">Cancelar</a>
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
            </form>
        </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

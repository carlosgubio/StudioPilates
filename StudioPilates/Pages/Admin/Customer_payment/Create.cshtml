@page
@model StudioPilates.Pages.Customer_payment.CreateModel

@{
    ViewData["Title"] = "Cadastro de Pagamento por Cliente";
}

<main class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-sm-12">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <form method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Customer_payment.Id_customer_plan" class="control-label"></label>
                    <input asp-for="Customer_payment.Id_customer_plan" class="form-control" />
                    <span asp-validation-for="Customer_payment.Id_customer_plan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer_payment.Paid_value" class="control-label"></label>
                    <input asp-for="Customer_payment.Paid_value" class="form-control" />
                    <span asp-validation-for="Customer_payment.Paid_value" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer_payment.Paid_at" class="control-label"></label>
                    <input asp-for="Customer_payment.Paid_at" class="form-control" />
                    <span asp-validation-for="Customer_payment.Paid_at" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer_payment.Payment_method" class="control-label"></label>
                    <input asp-for="Customer_payment.Payment_method" class="form-control" />
                    <span asp-validation-for="Customer_payment.Payment_method" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer_payment.Text" class="control-label"></label>
                    <input asp-for="Customer_payment.Text" class="form-control" />
                    <span asp-validation-for="Customer_payment.Text" class="text-danger"></span>
                </div>
                <div class="form-group text-left">
                    <a asp-page="/Customer_payment/List" class="btn btn-info">Cancelar</a>
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

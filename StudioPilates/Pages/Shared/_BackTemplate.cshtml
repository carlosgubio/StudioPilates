<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instituto Movimento Consciente :: @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">IMC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse ">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/Admin/CustomerCRUD/List">Cliente</a> </li>
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/Admin/PlanCRUD/List">Plano</a> </li>
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/Admin/QuestionCRUD/List">Perguntas</a> </li>
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Customer_question_responseCRUD/List">Questionário</a>
                    </ul>
                </div>
                <div class="col text-right">
                    <div class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/Contact">Suporte Técnico</a></div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="padding-bottom:72px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light text-center p-4 fixed-bottom">
        <div class="container">
            <span class="text-dark">Copyright &copy; 2020 - Todos os direitos reservados</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script defer scr="https://friconix.com/cdn/friconix.js"></script>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

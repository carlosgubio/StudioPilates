<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" lang="pt-br" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Instituto Movimento Consciente :: Área Administrativa</title>
</head>
<body>
    <header class="bg-dark">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">IMC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link" asp-area="" asp-page="/Admin/CustomerCRUD/List">Cliente</a>
                        <a class="nav-item nav-link" asp-area="" asp-page="/Admin/PlanCRUD/List">Plano</a>
                        <a class="nav-item nav-link" asp-area="" asp-page="/Admin/QuestionCRUD/List">Perguntas</a>
                        <a class="nav-item nav-link" asp-area="" asp-page="/Admin/Customer_question_responseCRUD/List">Questionário</a>
                    </div>
                </div>
                <div class="col text-right">
                    <div class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/Contact">Suporte</a></div>
                </div>
            </div>
        </nav>
    </header>
    <section class="container" style="padding-bottom:72px;">
        <main role="main">
            @RenderBody()
        </main>
    </section>

    <footer class="footer bg-light text-center p-4 fixed-bottom">
        <div class="container">
            <span class="text-dark">Copyright &copy; 2022 - Todos os direitos reservados</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script defer scr="https://friconix.com/cdn/friconix.js"></script>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
